@using ACDecompileParser.Shared.Lib.Models
@using ACSourceHallucinator.Data.Repositories
@using ACSourceHallucinator.Models
@using ACSourceHallucinator.Enums
@using ACSourceHallucinator.Data.Entities
@inject IStageResultRepository ResultRepository

<div class="pipeline-container">
    <!-- Sidebar -->
    <div class="pipeline-sidebar">
        <h5 class="p-3 mb-0 border-bottom">Pipeline Flow</h5>
        <div class="list-group list-group-flush">
            <button class="list-group-item list-group-item-action @(_selectedEntity == Type ? "active" : "")"
                    @onclick="() => SelectEntity(Type)">
                <div class="d-flex w-100 justify-content-between">
                    <h6 class="mb-1 text-truncate" title="@Type.NameWithTemplates">@Type.NameWithTemplates</h6>
                </div>
                <small>Main Struct</small>
            </button>

            @if (Type.FunctionBodies.Any())
            {
                <div class="sidebar-header p-2 text-uppercase font-weight-bold smaller" style="border-bottom: 1px solid var(--border-color);">
                    Methods (@Type.FunctionBodies.Count)
                </div>
                @foreach (var func in Type.FunctionBodies.OrderBy(f => f.Name))
                {
                    <button class="list-group-item list-group-item-action @(_selectedEntity == func ? "active" : "")"
                            @onclick="() => SelectEntity(func)">
                        <div class="d-flex w-100 justify-content-between" style="min-width: 0;">
                            <h6 class="mb-1 text-truncate" title="@func.Name">@func.Name</h6>
                        </div>
                    </button>
                }
            }
        </div>
    </div>

    <!-- Main Content -->
    <div class="pipeline-content p-4">
        @if (_selectedEntity is FunctionBodyModel funcModel)
        {
            <h3 class="mb-4" style="font-family: 'Consolas', 'Monaco', monospace;">@funcModel.Source</h3>
        }

        @if (_isLoading)
        {
            <div class="text-center mt-5">
                <div class="spinner-border text-primary" role="status">
                    <span class="visually-hidden">Loading...</span>
                </div>
            </div>
        }
        else if (_selectedResults == null || !_selectedResults.Any())
        {
            <div class="alert alert-info">
                No pipeline data found for this item.
            </div>
        }
        else
        {
            @foreach (var result in _selectedResults)
            {
                <div class="card mb-4">
                    <div class="card-header d-flex justify-content-between align-items-center">
                        <h5 class="mb-0">@result.StageName</h5>
                        <div>
                            <span class="badge @GetStatusBadge(result.Status)">@result.Status</span>
                            <small class="text-muted ms-2">@result.UpdatedAt.ToLocalTime()</small>
                        </div>
                    </div>
                    <div class="card-body">
                        @if (result.RequestLogs != null && result.RequestLogs.Any())
                        {
                            <h6 class="border-bottom pb-2 mb-3">LLM Requests (@result.RequestLogs.Count)</h6>
                            <div class="accordion" id="accordion-@result.Id">
                                @foreach (var log in result.RequestLogs.OrderBy(l => l.Timestamp))
                                {
                                    <div class="accordion-item">
                                        <h2 class="accordion-header">
                                            <button class="accordion-button @(_expandedLogIds.Contains(log.Id) ? "" : "collapsed")" type="button" @onclick="() => ToggleLog(log.Id)">
                                                <div class="d-flex w-100 justify-content-between align-items-center me-3">
                                                    <span>@GetRequestType(log) (Attempt @(log.Attempt + 1))</span>
                                                    <div class="d-flex gap-2">
                                                        <span class="badge @(log.IsSuccess ? "bg-success" : "bg-danger")">
                                                            @(log.IsSuccess ? "Success" : "Failed")
                                                        </span>
                                                        <span class="badge bg-secondary">@log.DurationMs ms</span>
                                                        <span class="badge bg-info text-dark">@log.Model</span>
                                                    </div>
                                                </div>
                                            </button>
                                        </h2>
                                        <div id="collapse-@log.Id" class="accordion-collapse collapse @(_expandedLogIds.Contains(log.Id) ? "show" : "")">
                                            <div class="accordion-body">
                                                @if (!string.IsNullOrEmpty(log.FailureReason))
                                                {
                                                    <div class="alert alert-danger mb-3">
                                                        <strong>Failure Reason:</strong> @log.FailureReason
                                                    </div>
                                                }

                                                <h6>Prompt (@log.PromptTokens tokens)</h6>
                                                <div class="code-view mb-3">
                                                    <pre><code>@log.Prompt</code></pre>
                                                </div>

                                                <h6>Response (@log.CompletionTokens tokens)</h6>
                                                <div class="code-view">
                                                    <pre><code>@log.Response</code></pre>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                }
                            </div>
                        }
                        else
                        {
                            <div class="text-muted fst-italic">No detailed LLM logs available.</div>
                        }
                    </div>
                </div>
            }
        }
    </div>
</div>

<style>
    .pipeline-container {
        display: flex;
        height: 100%; /* Fill available height */
        overflow: hidden;
    }

    .pipeline-sidebar {
        width: 300px;
        border-right: 1px solid var(--border-color);
        overflow-y: auto;
        flex-shrink: 0;
        background-color: var(--bg-secondary);
    }

    .pipeline-content {
        flex-grow: 1;
        overflow-y: auto;
        background-color: var(--bg-primary);
    }
    
    .list-group-item {
        border-radius: 0;
        border-left: 0;
        border-right: 0;
        background-color: transparent;
        color: var(--text-primary);
        border-color: var(--border-color);
    }
    
    .list-group-item:hover {
        background-color: var(--hover-bg);
        color: var(--link-color);
    }
    
    .list-group-item.active {
        background-color: var(--active-bg);
        color: var(--active-text);
        border-color: var(--active-bg);
    }

    .sidebar-header {
        font-size: 0.75rem;
        color: var(--text-secondary);
        letter-spacing: 0.5px;
    }
    
    .smaller {
        font-size: 0.8em;
    }
    
    /* Re-use code-view style from TypeDetail */
    .code-view {
        background-color: var(--code-bg);
        color: var(--code-text);
        padding: 1rem;
        border-radius: 4px;
        overflow-x: auto;
        font-family: 'Consolas', 'Monaco', monospace;
        font-size: 0.85rem;
        border: 1px solid var(--border-color);
        max-height: 400px;
    }
    
    .code-view pre { margin: 0; }
    
    /* Dark theme overrides for cards/accordion */
    .card {
        background-color: var(--bg-secondary);
        border-color: var(--border-color);
        color: var(--text-primary);
    }
    
    .card-header {
        background-color: var(--bg-secondary);
        border-bottom-color: var(--border-color);
        color: var(--text-primary);
    }
    
    .accordion-item {
        background-color: var(--bg-secondary);
        border-color: var(--border-color);
        color: var(--text-primary);
    }
    
    .accordion-button {
        background-color: var(--bg-secondary);
        color: var(--text-primary);
        box-shadow: none; /* Remove default blue focus ring */
    }
    
    .accordion-button:not(.collapsed) {
        background-color: var(--active-bg);
        color: var(--active-text);
        box-shadow: none;
    }
    
    .accordion-button::after {
        filter: invert(1); /* Invert arrow color for dark mode if needed, or check theme support */
    }
</style>

@code {
    [Parameter] public TypeModel Type { get; set; } = null!;

    private object _selectedEntity = null!;
    private List<StageResult>? _selectedResults;
    private bool _isLoading;
    private HashSet<int> _expandedLogIds = new();

    protected override async Task OnParametersSetAsync()
    {
        if (Type != null && _selectedEntity == null)
        {
            await SelectEntity(Type);
        }
    }

    private async Task SelectEntity(object entity)
    {
        _selectedEntity = entity;
        _isLoading = true;

        try
        {
            if (entity is TypeModel type)
            {
                // Fetch valid stage results for the struct/enum
                // Note: Assuming EntityType based on TypeModel.
                // Assuming TypeModel represents Struct or Enum
                var entityType = type.Type == TypeType.Enum ? EntityType.Enum : EntityType.Struct;
                _selectedResults = await ResultRepository.GetResultsWithLogsAsync(entityType, type.Id);
            }
            else if (entity is FunctionBodyModel func)
            {
                // Assuming FunctionBodyModel maps to StructMethod
                _selectedResults = await ResultRepository.GetResultsWithLogsAsync(EntityType.StructMethod, func.Id);
            }
        }
        finally
        {
            _isLoading = false;
        }
    }

    private string GetStatusBadge(StageResultStatus status) => status switch
    {
        StageResultStatus.Success => "bg-success",
        StageResultStatus.Failed => "bg-danger",
        StageResultStatus.Pending => "bg-warning text-dark",
        _ => "bg-secondary"
    };

    private void ToggleLog(int logId)
    {
        if (_expandedLogIds.Contains(logId))
            _expandedLogIds.Remove(logId);
        else
            _expandedLogIds.Add(logId);
    }

    private string GetRequestType(LlmRequestLog log)
    {
        if (!string.IsNullOrWhiteSpace(log.Response) &&
            log.Response.Trim().StartsWith("{") &&
            log.Response.Contains("\"valid\""))
        {
            return "Verification";
        }

        return "Generation";
    }

}
