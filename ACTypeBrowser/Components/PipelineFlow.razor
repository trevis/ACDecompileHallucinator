        display: flex;
        height: 100%; /* Fill available height */
        overflow: hidden;
        flex-direction: row; /* Ensure main content is left, sidebar right */
    }

    .pipeline-content {
        flex-grow: 1;
        overflow-y: auto;
        background-color: var(--bg-primary);
        min-width: 0; /* Allow shrinking */
    }
    
    .list-group-item {
        border-radius: 0;
        border-left: 0;
        border-right: 0;
        background-color: transparent;
        color: var(--text-primary);
        border-color: var(--border-color);
    }
    
    .list-group-item:hover {
        background-color: var(--hover-bg);
        color: var(--link-color);
    }
    
    .list-group-item.active {
        background-color: var(--active-bg);
        color: var(--active-text);
        border-color: var(--active-bg);
    }

    .sidebar-header {
        font-size: 0.75rem;
        color: var(--text-secondary);
        letter-spacing: 0.5px;
    }
    
    .smaller {
        font-size: 0.8em;
    }
    
    /* Re-use code-view style from TypeDetail */
    .pipeline-container .code-view {
        background-color: var(--code-bg);
        color: var(--code-text);
        padding: 1rem;
        border-radius: 4px;
        font-family: 'Consolas', 'Monaco', monospace;
        font-size: 0.85rem;
        border: 1px solid var(--border-color);
        max-height: 400px;
        overflow-y: auto;
        overflow-x: hidden !important;
    }
    
    .pipeline-container .code-view pre { 
        margin: 0;
        white-space: pre-wrap !important;
        word-break: break-all !important;
    }

    .pipeline-container .code-view code {
        white-space: pre-wrap !important;
        word-break: break-all !important;
    }
    
    /* Dark theme overrides for cards/accordion */
    .card {
        background-color: var(--bg-secondary);
        border-color: var(--border-color);
        color: var(--text-primary);
    }
    
    .card-header {
        background-color: var(--bg-secondary);
        border-bottom-color: var(--border-color);
        color: var(--text-primary);
    }
    
    .accordion-item {
        background-color: var(--bg-secondary);
        border-color: var(--border-color);
        color: var(--text-primary);
    }
    
    .accordion-button {
        background-color: var(--bg-secondary);
        color: var(--text-primary);
        box-shadow: none; /* Remove default blue focus ring */
    }
    
    .accordion-button:not(.collapsed) {
        background-color: var(--active-bg);
        color: var(--active-text);
        box-shadow: none;
    }
    
    .accordion-button::after {
        filter: invert(1); /* Invert arrow color for dark mode if needed, or check theme support */
    }
</style>

@code {
    [Parameter] public TypeModel Type { get; set; } = null!;
    [Parameter] public string? PipelineItem { get; set; }

    private object _selectedEntity = null!;
    private List<StageResult>? _selectedResults;
    private bool _isLoading;
    private HashSet<int> _expandedLogIds = new();
    private string? _errorMessage;

    protected override async Task OnParametersSetAsync()
    {
        if (Type != null)
        {
            if (!string.IsNullOrEmpty(PipelineItem))
            {
                // Try to match function by name
                var targetFunc = Type.FunctionBodies.FirstOrDefault(f => f.Name == PipelineItem);
                if (targetFunc != null)
                {
                    if (_selectedEntity != targetFunc)
                    {
                        await SelectEntity(targetFunc, updateUrl: false);
                    }
                }
                else
                {
                    // If pipeline item specified but not found (or is "Main"), default to Type
                    // Assuming "Main" is the identifier for the type itself
                    if (PipelineItem == "Main" && _selectedEntity != Type)
                    {
                        await SelectEntity(Type, updateUrl: false);
                    }
                }
            }
            else if (_selectedEntity == null)
            {
                // Default to Type if nothing selected and no param
                await SelectEntity(Type, updateUrl: false);
            }
        }
    }

    private async Task SelectEntity(object entity, bool updateUrl = true)
    {
        _selectedEntity = entity;
        _selectedResults = null;
        _errorMessage = null;
        _isLoading = true;
        _expandedLogIds.Clear();

        try
        {
            if (entity is TypeModel type)
            {
                // Fetch valid stage results for the struct/enum
                // Note: Assuming EntityType based on TypeModel.
                // Assuming TypeModel represents Struct or Enum
                var entityType = type.Type == TypeType.Enum ? EntityType.Enum : EntityType.Struct;
                _selectedResults = await ResultRepository.GetResultsWithLogsAsync(entityType, type.Id);
            }
            else if (entity is FunctionBodyModel func)
            {
                // Assuming FunctionBodyModel maps to StructMethod
                _selectedResults = await ResultRepository.GetResultsWithLogsAsync(EntityType.StructMethod, func.Id);
            }
        }
        catch (Exception ex)
        {
            _errorMessage = $"Error loading pipeline data: {ex.Message}";
            Console.WriteLine(ex);
        }
        finally
        {
            _isLoading = false;
        }

        if (updateUrl)
        {
            string? pipelineItem = null;
            if (entity is FunctionBodyModel func)
            {
                pipelineItem = func.Name;
            }
            else if (entity is TypeModel)
            {
                // Represent main type as "Main" or empty? 
                // Let's use "Main" to be explicit if needed, or remove param if it's the default.
                // However, matching the logic above, let's allow "Main" or just remove it to keep it clean.
                // Let's remove it to keep URL clean for default view.
                pipelineItem = "Main";
            }

            var uri = NavigationManager.GetUriWithQueryParameter("pipelineItem", pipelineItem);
            NavigationManager.NavigateTo(uri, replace: true);
        }
    }

    private string GetStatusBadge(StageResultStatus status) => status switch
    {
        StageResultStatus.Success => "bg-success",
        StageResultStatus.Failed => "bg-danger",
        StageResultStatus.Pending => "bg-warning text-dark",
        _ => "bg-secondary"
    };

    private void ToggleLog(int logId)
    {
        if (_expandedLogIds.Contains(logId))
            _expandedLogIds.Remove(logId);
        else
            _expandedLogIds.Add(logId);
    }

    private string GetRequestType(LlmRequestLog log)
    {
        if (!string.IsNullOrWhiteSpace(log.Response) &&
            log.Response.Trim().StartsWith("{") &&
            log.Response.Contains("\"valid\""))
        {
            return "Verification";
        }

        return "Generation";
    }

}
